<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/purple_500"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/basic"
            android:gravity="center"
            android:text="Details"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageDia"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/deals" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/nameDia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_500"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/basic"
            android:gravity="center"
            android:inputType="none"
            android:text="Name"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/catDia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_500"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/basic"
            android:gravity="center"
            android:inputType="none"
            android:text="Desi"
            android:textColor="@color/purple_500"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/priceDia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_500"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/basic"
            android:gravity="center"
            android:inputType="none"
            android:text="980PKR"
            android:textColor="@color/lightRed"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/descDia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:backgroundTint="@color/purple_500"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/basic"
            android:gravity="center"
            android:inputType="none"
            android:text="Description"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/pinBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:buttonTint="@color/lightRed"
            android:fontFamily="@font/basic"
            android:text="Pin to front" />


    </LinearLayout>


    <Button
        android:id="@+id/doneBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/purple_500"
        android:text="Done"
        android:textAllCaps="false" />


</LinearLayout>

